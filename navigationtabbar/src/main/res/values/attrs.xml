<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable fname="NavigationTabBar">
        <attr fname="ntb_titled" format="boolean"/>
        <attr fname="ntb_badged" format="boolean"/>
        <attr fname="ntb_scaled" format="boolean"/>
        <attr fname="ntb_tinted" format="boolean"/>
        <attr fname="ntb_swiped" format="boolean"/>
        <attr fname="ntb_badge_use_typeface" format="boolean"/>

        <attr fname="ntb_title_size" format="dimension"/>
        <attr fname="ntb_title_mode" format="enum">
            <enum fname="all" value="0"/>
            <enum fname="active" value="1"/>
        </attr>

        <attr fname="ntb_badge_size" format="dimension"/>
        <attr fname="ntb_badge_position" format="enum">
            <enum fname="left" value="0"/>
            <enum fname="center" value="1"/>
            <enum fname="right" value="2"/>
        </attr>
        <attr fname="ntb_badge_gravity" format="enum">
            <enum fname="top" value="0"/>
            <enum fname="bottom" value="1"/>
        </attr>
        <attr fname="ntb_badge_bg_color" format="color"/>
        <attr fname="ntb_badge_title_color" format="color"/>

        <attr fname="ntb_typeface" format="string"/>
        <attr fname="ntb_corners_radius" format="dimension"/>
        <attr fname="ntb_icon_size_fraction" format="float"/>
        <attr fname="ntb_animation_duration" format="integer"/>

        <attr fname="ntb_inactive_color" format="color"/>
        <attr fname="ntb_active_color" format="color"/>
        <attr fname="ntb_bg_color" format="color"/>

        <attr fname="ntb_preview_colors" format="reference"/>
    </declare-styleable>

</resources>